<%- include('partials/header') %>

    <section class="content">
        <h1> <span class="animated">>></span> GET IN TOUCH <span class="animated">
            <<</span> </h1>
        <div class="textbox border">

            <div class="form-container">

                <form id="contact" action="/contact" method="POST" class="contact">
                    <input required type="text" name="message[name]" id="" placeholder="Name">
                    <input required type="email" name="message[email]" id="" placeholder="Your Email">
                    <textarea required placeholder="Tell me about your project and how I can help." name="message[text]" id="" cols="30" rows="10"></textarea>
                    <button id="sendmsg">Send</button>
                </form>

                <% if (message && message.name) { %>
                    <p class=" small "> Thanks for your message
                        <%= message.name %> ! I'll be in touch soon. </p>
                    <% } %>
            </div>
        </div>

    </section>


    <%- include('partials/footer') %>